      <input name="passwords[new]" type="password" placeholder="New Password">
      <input class="submit-btn btn btn-success btn-sm" type="submit" value="Submit">
    </fieldset>
  </form>
  <button id="photo-index" class="btn btn-success btn-lg">Refresh feed</button>
